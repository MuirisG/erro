<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#0F0F0F"/>
            <solid android:color="#0496ff"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#101011"/>
            <solid android:color="#0496ff"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="0.5dp" android:color="#F3F6F8"/>
            <solid android:color="#5B31383D"/>

        </shape>
    </item>

</selector>



