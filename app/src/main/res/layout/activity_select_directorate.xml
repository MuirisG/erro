<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353131"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:src="@drawable/menu"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="40dp"
                android:fontFamily="@font/audiowide"
                android:gravity="center_vertical"
                android:text="select surface"
                android:textAlignment="center"
                android:textColor="#00BCD4"
                android:textSize="25dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_zone1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#494444"
                android:fontFamily="@font/audiowide"
                android:gravity="center"
                android:text="tarmac"
                android:textColor="#00BCD4"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/btn_zone2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="#494444"
                android:fontFamily="@font/audiowide"
                android:gravity="center"
                android:text="grass verge"
                android:textColor="#00BCD4"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/btn_zone3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="#494444"
                android:fontFamily="@font/audiowide"
                android:gravity="center"
                android:text="concrete foothpath"
                android:textColor="#00BCD4"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/btn_zone4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="#494444"
                android:fontFamily="@font/audiowide"
                android:gravity="center"
                android:text="hra"
                android:textColor="#00BCD4"
                android:textSize="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="220dp"
                android:background="#00BCD4"
                android:fontFamily="@font/audiowide"
                android:gravity="center"
                android:text="next"
                android:textColor="#494444"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>